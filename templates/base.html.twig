{# templates/base.html.twig #}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Jquery files -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <!-- Bootstrap files -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

        {% block js %}
        {% endblock %}

        <link href="{{ asset('css/main-style.css') }}" rel="stylesheet"/>
        
        {% block css %}
        {% endblock %}

        <meta name="theme-color" content="#7952b3">

        <title>SCG Project - {% block title %}{% endblock %}</title>
    </head>
    

    <body>
        <nav id="nav-header" class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    {% if page != 'register' and page != 'login' %}
                        <li class="nav-item">
                            <a class="nav-link {% if page == 'orders' %}active{% endif %}" href="/orders">Create Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if page == 'view-orders' %}active{% endif %}" href="/view-orders">View Orders</a>
                        </li>
                        {% if is_granted('ROLE_MANAGER') %}
                            <li class="nav-item">
                                <a class="nav-link {% if page == 'users-list' %}active{% endif %}" href="/users-list">Users List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if page == 'create-user' %}active{% endif %}" href="/create-user">Create User</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    {% endif %}
                    {% if page == 'register' or page == 'login' %}
                        <li class="nav-item">
                            <a class="nav-link {% if page == 'login' %}active{% endif %}" href="/">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if page == 'register' %}active{% endif %}" href="/register">Register</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div class="container">
            {% block content %}
            {% endblock%}
        </div>
    </body>
</html>
