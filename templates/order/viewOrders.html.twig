{# templates/order/viewOrders.html.twig #}
{% extends "base.html.twig" %}

{% block title%}
    {{ pageTitle }}
{% endblock %}

{% block content %}
	{% set i = 0 %}

	{% for order in orders %}

	{% if i > 0 %}
		<br>
		<hr>
		<br>
	{% endif %}
	{% set i = i + 1 %}

	<div class="card">
        <div class="card-header">
            Order #{{ order.id }}
        </div>

		<div class="card-body">
			<table class="table table-striped table-wrapper-scroll-x" id="cards-table">
				<thead>
					<tr>
						<th scope="col-sm-2">Sport</th>
						<th scope="col-sm-2">Player</th>
						<th scope="col-sm-2">Year</th>
						<th scope="col-sm-2">Manufacturer</th>
						<th scope="col-sm-1">Card #</th>
						<th scope="col-sm-1">Set</th>
						<th scope="col-sm-3">Variation</th>
						<th scope="col-sm-1">Value</th>
					</tr>
				</thead>
				<tbody>
					{% for card in order.cards %}

					<tr>
						<td class="col-sm-2">
							{{ card.sport }}
						</td>
						<td class="col-sm-2">
							{{ card.player }}
						</td>
						<td class="col-sm-2">
							{{ card.year }}
						</td>
						<td class="col-sm-2">
							{{ card.manufacturer }}
						</td>
						<td class="col-sm-1"> 
							{{ card.number }}
						</td>
						<td class="col-sm-1">
							{{ card.setName }}
						</td>
						<td class="col-sm-3">
							{{ card.variations }}
						</td>
						<td class='col-sm-1'>
							${{ card.value }}
						</td>
					</tr>

					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	{% endfor %}
{% endblock %}